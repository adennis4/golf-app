%html
  %head
    %link#changeColor{ :href => "assets/color/multicolor.css", :rel => "stylesheet", :type => "text/css" }
  %body
    .header
      .container
        .row
          .cart.on
            %i.icon-shopping-cart
            %p
              1.250,00
              %span ( 3 )

            / Header Cart Content
            .cart-content
              .mini-cart-info
                %h3 Shopping Cart
                %ul
                  %li
                    %a{:href => "#"}
                      %img{:alt => "Product", :src => ""}/
                    .mini-cart-detail
                      %h5
                        %a{:href => "#"} iPhone 5 16GB Black
                      %em 1 item
                      %p
                        %span € 1.230
                      \€ 880
                  %li
                    %a{:href => "#"}
                      %img{:alt => "Product", :src => ""}/
                    .mini-cart-detail
                      %h5
                        %a{:href => "#"} iPhone 4s 8GB White
                      %em 1 item
                      %p € 120.00
              .mini-cart-total
                %ul
                  %li
                    Sub-Total
                    %span € 101.00
                  %li
                    Eco Tax
                    %span € 2.00
                  %li
                    VAT
                    %span € 17.68
                %p.total
                  Total
                  %span € 120.00
              .checkout
                %a.btn{:href => "#"} View Cart
                %a.btn.btn-checkout{:href => "#"} Checkout

          / Header Login
          %p.log-reg
            %a{:href => "#"} Sign In
            %a{:href => "#"} Register
          .clearfix

    / Main Navbar
    %hr.bordered
    .navbar-cont
      .container
        .row
          .span12
            .navbar
              .navbar-inner
                .container
                  %a.btn.btn-navbar{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse"}
                    %i.icon-align-justify
                  .nav-collapse.collapse.navbar-responsive-collapse
                    %ul.nav
                      %li.active
                        %a{:href => "/"} Home
                      %li.dropdown
                        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "about.html"}>
                          About

                      %li.dropdown
                        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}>
                          Blog

                      %li.dropdown
                        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}>
                          %i.icon-angle-down
                          Shop

                        / Dropdown Navbar
                        %ul.dropdown-menu
                          %li
                            %a{:href => "/"} Golf Balls

                      %li.dropdown
                        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => cart_path}
                          Cart
    %hr.bordered
      .container
        .row
          .span12
            %ul.breadcrumb
              %li
                %a{ :href => "/" }
